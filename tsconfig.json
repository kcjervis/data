{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": ["dist/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}